# Production Environment Variables for Bugal Marketing Website
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# NextAuth Configuration
NEXTAUTH_URL="https://bugal.com.au"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Email Configuration (for contact forms)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@bugal.com.au"

# AWS Configuration (for static deployment)
AWS_REGION="ap-southeast-2"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
S3_BUCKET_NAME="bugal-marketing-static"
CLOUDFRONT_DISTRIBUTION_ID="your-cloudfront-distribution-id"

# Admin Panel Configuration
ADMIN_EMAIL="admin@bugal.com.au"
ADMIN_PASSWORD="your-secure-admin-password"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"

# Build Configuration
NODE_ENV="production"
NEXT_PUBLIC_SITE_URL="https://bugal.com.au"