# Admin Panel Environment Configuration
# Copy this file to .env.admin and update with your actual values

# Build target
BUILD_TARGET=admin

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/bugal_admin"

# NextAuth Configuration
NEXTAUTH_URL="https://admin.bugal.com.au"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Email Configuration (for contact form and notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@bugal.com.au"

# Admin Panel Settings
ADMIN_EMAIL="admin@bugal.com.au"
ADMIN_NAME="Bugal Admin"

# CORS Configuration
ALLOWED_ORIGINS="https://bugal.com.au,https://www.bugal.com.au"

# AWS Configuration (if using AWS services)
AWS_REGION="ap-southeast-2"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"

# CloudFront Distribution ID (for cache invalidation)
CLOUDFRONT_DISTRIBUTION_ID="your-distribution-id"

# S3 Bucket (for file uploads)
S3_BUCKET_NAME="bugal-admin-uploads"

# Environment
NODE_ENV="production"
